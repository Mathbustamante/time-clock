<% include ./partials/header%>
<div class = "ui grid">
    <div class="box-Information">
   
        <div class="container">
            <center><h1>How can I help you?</h1></center> 
            <% person.forEach(function(worker){ %>
                
                <div class="informationContent">

                    <div class="contentSegment">
                         <a class="headername" href="/timeclock/<%= worker._id %>"><%=worker.name%></a>
                       
                         <div class="description">
                             <p><strong>Hometown: </strong> <%- worker.Hometown %></p>
                         </div>
                         <div class="description">
                             <p><strong>Major: </strong><%- worker.Major %></p>
                         </div>
                         <div class="description">
                             <p><strong>Involved In: </strong><%- worker.InvolvedIn %></p>
                         </div>
                         <div class="description">
                             <p><strong>Fun Fact: </strong><%- worker.FunFact %></p>
                         </div>
                    </div>
                         <div class="description">
                            <img src="<%= worker.image %>" style=" width: 400px; height: 500px; margin-top: 60px; " >
                        </div>
                         
                    
                </div>
            <% }); %>
       </div>
    </div>
</div>




<script type="text/javascript" src="/stylesheets/jQuery.js"></script>
<% include ./partials/footer%>